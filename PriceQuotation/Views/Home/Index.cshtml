@model Quotation

@{
    ViewBag.Title = "Price Quotation";
}

<div asp-validation-summary="All"></div>

<form asp-action="Index" method="post">
    <div class="row mb-3">
        <label asp-for="Subtotal" class="col-md-2">Subtotal:</label>
        <div class="col-md-3">
            <input asp-for="Subtotal" class="form-control"/>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="DiscountPercent" class="col-md-2">Discount percent:</label>
        <div class="col-md-3">
            <input asp-for="DiscountPercent" class="form-control"/>
        </div>
    </div>
    <div>
        <label>Discount amount:</label>
        <label>@ViewBag.Discount.ToString("c2")</label>
    </div>
    <div>
        <label>Total:</label>
        <label>@ViewBag.Total.ToString("c2")</label>
    </div>
    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>
